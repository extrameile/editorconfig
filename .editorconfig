# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

# Base configuration
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/
[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Don't track trailing whitespace on markdown files
[*.{md,mdown,markdown}]
trim_trailing_whitespace = false
